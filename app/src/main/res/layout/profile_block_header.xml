<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="0dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/user_role"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:paddingBottom="4dp"
                android:singleLine="true"
                android:textColor="?text_primary_color"
                android:textSize="20sp"
                tools:text="Moderator," />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="sans-serif-medium"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="?text_primary_color"
                android:textSize="32sp"
                tools:text="Zibuhoker" />

            <TextView
                android:id="@+id/user_online"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="sans-serif"
                android:paddingTop="10dp"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="?text_secondary_color"
                android:textSize="16sp"
                tools:text="Online now" />

            <TextView
                android:id="@+id/user_joined"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:fontFamily="sans-serif"
                android:paddingTop="12dp"
                android:includeFontPadding="false"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="false"
                android:textColor="?text_secondary_color"
                android:textSize="16sp"
                tools:text="Joined 20 january 2023" />

        </LinearLayout>

        <include
            android:id="@+id/user_icon"
            layout="@layout/user_icon_l"
            android:scaleType="fitCenter" />

    </LinearLayout>

</LinearLayout>
