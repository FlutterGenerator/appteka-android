<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingTop="16dp"
    android:paddingEnd="20dp"
    android:paddingBottom="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:paddingBottom="13dp"
        android:text="@string/description"
        android:textColor="?text_primary_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web|email"
        android:gravity="fill"
        android:paddingBottom="8dp"
        android:textColor="?text_primary_color"
        android:textIsSelectable="true"
        android:textSize="16sp"
        tools:text="Application description text here" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/google_play_button"
        style="@style/MaterialButtonSecondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-8dp"
        android:layout_marginRight="-8dp"
        android:drawableEnd="@drawable/ic_google_play"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/find_on_gp"
        app:cornerRadius="99dp"
        app:drawableTint="?attr/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="@string/app_version_title"
                android:textColor="?attr/text_primary_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/text_secondary_color"
                android:textSize="16sp"
                tools:text="1.7 (490)" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/versions_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_grey_ripple"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingTop="4dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/versions_button_text"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center"
                android:minWidth="24dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:textColor="@color/text_primary_color_light"
                android:textSize="12sp"
                tools:text="10 versions" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_forward"
                app:tint="@android:color/black" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:paddingTop="4dp"
        android:text="@string/uploaded_title"
        android:textColor="?attr/text_primary_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/upload_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4dp"
        android:textColor="?attr/text_secondary_color"
        android:textSize="16sp"
        tools:text="18.01.2017" />

    <TextView
        android:id="@+id/app_checksum_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:paddingTop="4dp"
        android:text="@string/checksum_title"
        android:textColor="?attr/text_primary_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/app_checksum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:paddingBottom="4dp"
        android:textColor="?attr/text_secondary_color"
        android:textIsSelectable="true"
        android:textSize="13sp"
        android:typeface="monospace"
        tools:text="d3cdd8d14a376b8309ee1c06a78cb01142427e59" />

    <TextView
        android:id="@+id/app_source_url_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:paddingTop="4dp"
        android:text="@string/source_code_url"
        android:textColor="?attr/text_primary_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/app_source_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:paddingBottom="4dp"
        android:textColor="?attr/text_secondary_color"
        android:textSize="16sp"
        tools:text="https://github.com/solkin/appteka-android" />

</LinearLayout>
